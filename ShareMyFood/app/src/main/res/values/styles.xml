<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#fff</item>
        <item name="navigationIcon">@drawable/menu</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="closeIcon">@color/colorTransparent</item>
    </style>

    <!-- Custom TextView of Button style With Green -->
    <style name="Customtvbutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/fab_padding_small</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/hinted_geomanist_book</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/fab_text_size_big</item>
    </style>
    <style name="CustomtvbuttonReply">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/hinted_geomanist_book</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/fab_text_size_big</item>
    </style>

    <style name="Customtvbuttonstroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/fab_padding_small</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/hinted_geomanist_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/fab_text_size_big</item>
    </style>


    <!-- Blur view -->
    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/back</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">25sp</item>
    </style>
    <!-- Blur view -->

</resources>





























