<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.DashboardActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorPrimaryDark">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myaccount"
                android:textSize="18dp"
                android:layout_marginLeft="-40dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/hinted_geomanist_book"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_saveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="18dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/hinted_geomanist_book"/>
        </LinearLayout>
        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">-->
            <LinearLayout
                android:id="@+id/linear_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/frm_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorWhite"
                        android:src="@drawable/virtualphoto"
                        android:background="@drawable/white_circlie_shadow"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|bottom
"                   android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_pen"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:layout_marginBottom="5dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>
                        <EditText
                            android:id="@+id/edit_name"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Alianna Jane"
                            android:textColor="@color/colorBlack"
                            android:background="@color/colorTransparent"
                            android:textSize="@dimen/fab_text_size_small"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:layout_marginBottom="5dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>
                        <EditText
                            android:id="@+id/edit_phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:inputType="phone"
                            android:hint="Enter your phone number"
                            android:background="@color/colorTransparent"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fab_text_size_small"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginBottom="5dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>
                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:inputType="textEmailAddress"
                            android:layout_height="30dp"
                            android:background="@color/colorTransparent"
                            android:textSize="@dimen/fab_text_size_small"
                            android:textColor="@color/colorBlack"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/google"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fab_text_size_small"
                            android:text=" Google "/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_Gverified"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fab_text_size_small"
                                android:text="@string/verified"
                                android:gravity="center|right"
                                android:drawablePadding="10dp"
                                android:textColor="@color/colorGreen"
                                android:drawableRight="@drawable/verified"/>
                            <TextView
                                android:id="@+id/tv_Gunverified"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fab_text_size_small"
                                android:text="@string/unverified"
                                android:gravity="center|right"/>
                        </FrameLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightBlack"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/facebook1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fab_text_size_small"
                            android:text=" Facebook "/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_Fverified"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fab_text_size"
                                android:text="@string/verified"
                                android:gravity="center|right"
                                android:drawablePadding="10dp"
                                android:visibility="invisible"
                                android:textColor="@color/colorGreen"
                                android:drawableRight="@drawable/verified"/>
                            <TextView
                                android:id="@+id/tv_Funverified"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fab_text_size_small"
                                android:text="@string/unverified"
                                android:gravity="center|right"/>
                        </FrameLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightBlack"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/tv_deleteAccount"
                            android:text="Delete Account"
                            android:background ="@drawable/sh_text_view_lbule"
                            style="@style/Customtvbutton"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:textSize="@dimen/fab_text_size_smaller"
                            android:layout_margin="15dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        <!--</ScrollView>-->
    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicator="LineScaleParty"
        app:indicator_color="#F53700" />
</FrameLayout>