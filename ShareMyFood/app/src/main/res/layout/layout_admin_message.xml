<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp">
        <FrameLayout
            android:id="@+id/notiLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/admin_userimage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorWhite"
                        android:src="@mipmap/logo"
                        android:background="@drawable/white_circlie_shadow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/admin_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Admin Message Title"
                        android:layout_marginRight="30dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/admin_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="09/05/2019 07:30 PM"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorPunc"/>

                    <TextView
                        android:id="@+id/admin_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Hello how are you? I appreciate you."
                        android:textSize="13sp"
                        android:textColor="@color/colorBlack"
                        android:singleLine="false"
                        android:lines="2"
                        android:ellipsize="end"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/admin_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#fff"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"/>

        </FrameLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>