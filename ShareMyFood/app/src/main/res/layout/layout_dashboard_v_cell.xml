<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cell_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Title Here"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/fab_text_size_small"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/cell_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/background"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/cell_like_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.7" android:scaleY="0.7"
                        android:src="@drawable/like"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fab_text_size_smaller"
                        android:text="Likes: "
                        android:textColor="@color/colorLightBlack"/>
                    <TextView
                        android:id="@+id/cell_like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fab_text_size_smaller"
                        android:text="0"
                        android:textColor="@color/colorLightBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/cell_request_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.9" android:scaleY="0.9"
                        android:src="@drawable/request"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fab_text_size_smaller"
                        android:text=" Requests: "
                        android:textColor="@color/colorLightBlack"/>
                    <TextView
                        android:id="@+id/cell_request_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fab_text_size_smaller"
                        android:text="0"
                        android:textColor="@color/colorLightBlack"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>