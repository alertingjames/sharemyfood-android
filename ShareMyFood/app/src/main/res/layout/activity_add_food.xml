<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.DashboardActivity"
    android:id="@+id/activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorPrimaryDark">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addfood"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/hinted_geomanist_book"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/tv_addFood"
                        android:text="Share"
                        android:textSize="@dimen/fab_text_size_small"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorTransparent"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                </LinearLayout>
        </LinearLayout>
        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">-->
            <LinearLayout
                android:id="@+id/linear_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:id="@+id/lin_addImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_food_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/vegteble"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/img_close_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/close"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="-40dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lin_addImage_control"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/tv_camera"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/localcamera"
                            android:layout_gravity="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingBottom="5dp"
                            android:orientation="horizontal">
                            <!--<Button
                                android:id="@+id/tv_camera"
                                android:text="@string/takePhoto"
                                android:background ="@drawable/sh_text_view_lbule"
                                android:gravity="center"
                                style="@style/Customtvbutton"
                                android:layout_weight="0.4"
                                android:textSize="@dimen/fab_text_size_smaller"
                                android:layout_margin="15dp"/>-->
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload food image"
                            android:gravity="center"
                            android:textSize="@dimen/fab_text_size_smallest"/>
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:layout_marginBottom="5dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>-->
                        <EditText
                            android:id="@+id/edit_title"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:inputType="text"
                            android:textColor="@color/colorBlack"
                            android:hint="Title"
                            android:background="@color/colorTransparent"
                            android:textSize="@dimen/fab_text_size_small"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:layout_marginBottom="5dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>-->
                        <EditText
                            android:id="@+id/edit_description"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/colorBlack"
                            android:inputType="text"
                            android:background="@color/colorTransparent"
                            android:textSize="@dimen/fab_text_size_small"
                            android:hint="Desciption"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:layout_marginBottom="5dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>-->
                        <EditText
                            android:id="@+id/edit_weight"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:inputType="numberDecimal"
                            android:background="@color/colorTransparent"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fab_text_size_small"
                            android:hint="Weight"
                            android:paddingLeft="10dp"/>
                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="-30dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioKilogram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="kg"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/radioGram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="gms" />

                        </RadioGroup>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food Quantity"
                            android:layout_marginBottom="5dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>-->
                        <EditText
                            android:id="@+id/edit_number"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorTransparent"
                            android:textColor="@color/colorBlack"
                            android:hint="Food Quantity"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/fab_text_size_small" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick up time"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>-->
                        <EditText
                            android:id="@+id/edit_pickuptime"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorTransparent"
                            android:textSize="@dimen/fab_text_size_small"
                            android:hint="Pickup time: Today 4~6PM or I can leave it outside"
                            android:textColor="@color/colorBlack"
                            android:layout_marginBottom="5dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone number"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/fab_text_size_smaller"/>
                        <EditText
                            android:id="@+id/edit_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorTransparent"
                            android:textSize="@dimen/fab_text_size_small"
                            android:hint="Enter your phone number"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorLightBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/time"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fab_text_size_small"
                            android:text=" Expiry days: "/>

                        <TextView
                            android:id="@+id/tv_expiry"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:drawableRight="@drawable/drop"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fab_text_size_big"
                            android:text="5"/>

                        <NumberPicker
                            android:id="@+id/numberPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:visibility="invisible"
                            android:layout_marginLeft="30dp"
                            android:dividerPadding="-10dp"/>
                    </LinearLayout>
                    <!--<View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightBlack"/>-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/maps"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fab_text_size_small"
                            android:text=" PickUp location "/>

                        <ImageView
                            android:id="@+id/img_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleY="0.5" android:scaleX="0.5"
                            android:padding="10dp"
                            android:src="@drawable/edit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/locatoin_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fab_text_size_smaller"
                            android:lines="2"
                            android:text=""
                            android:layout_marginTop="5dp"
                            android:paddingLeft="40dp"/>
                    </LinearLayout>
                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingBottom="10dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/tv_addFood"
                            android:text="Share Food"
                            android:gravity="center"
                            android:background ="@drawable/sh_text_view_lbule"
                            style="@style/Customtvbutton"
                            android:layout_weight="0.4"
                            android:textSize="@dimen/fab_text_size_smaller"
                            android:layout_margin="15dp"/>
                    </LinearLayout>-->

                </LinearLayout>
            </LinearLayout>
        <!--</ScrollView>-->
    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicator="LineScaleParty"
        app:indicator_color="#F53700" />
</FrameLayout>